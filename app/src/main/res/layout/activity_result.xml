<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:animationCache="false"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:text="Seu IMC é"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:padding="16sp"
        android:text="27.104"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/textview_classificacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="monospace"
        android:text="Classificação: Normal"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="monospace"
        android:text="Veja a tabela abaixo:"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18sp"
        android:fontFamily="monospace"
        android:text="Menor do que 18,5= ABAIXO DO PESO"
        android:textAllCaps="true"
        android:textColor="#45DC05"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18sp"
        android:fontFamily="monospace"
        android:text="Entre 18,5 - 24,9= NORMAL "
        android:textAllCaps="true"
        android:textColor="@color/teal_200"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18sp"
        android:fontFamily="monospace"
        android:text="Entre 25,0 - 29,9= SOBREPRESO I "
        android:textAllCaps="true"
        android:textColor="#DCA605"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18sp"
        android:fontFamily="monospace"
        android:text="Entre 30,0 - 239,9= OBESIDADE II "
        android:textAllCaps="true"
        android:textColor="#DC0550"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18sp"
        android:fontFamily="monospace"
        android:text="Maior que 40,0= OBESIDADE GRAVE III "
        android:textAllCaps="true"
        android:textColor="#DC0525"
        android:textStyle="bold" />

</LinearLayout>
